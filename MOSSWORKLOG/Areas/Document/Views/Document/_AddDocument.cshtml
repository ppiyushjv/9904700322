@model MOSSWORKLOG.Areas.Document.Models.DocumentModel
@{
    Layout = null;
}

<!-- modal start -->
<div class="modal fade" id="modelDocument" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                @if (!Model.IsEdit)
                {
                    <h4 class="modal-title">Add Document</h4>
                }
                else
                {
                    <h4 class="modal-title">Edit Document</h4>
                }
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateDocument", "Document", new { area = "Document" }, FormMethod.Post, new { @role = "form", @id = "frmCreateProject", @class = "form-horizontal" }))
                {

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.IsEdit)

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control", @type = "text", @autofocus = "autofocus", @style = "width:80%;" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Descriptions, htmlAttributes: new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextAreaFor(m => m.Descriptions, 3, 50, new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                @Html.ValidationMessageFor(m => m.Descriptions, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(m => m.DocumentPath, htmlAttributes: new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.UploadFile, "", new { @class = "form-control", @type = "file", @style = "width:80%;" })
                                @Html.TextBoxFor(m => m.DocumentPath, "", new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                @Html.ValidationMessageFor(m => m.DocumentPath, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.CategoryId, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.CategoryId, Model.AllCategory, new { @class = "form-control select2", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.SubCategoryId, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.SubCategoryId, Model.AllSubCategory, new { @class = "form-control select2", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.SubCategoryId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.Label("Keywords", htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.ListBoxFor(m => m.Keywords, Model.AllKeyword, new { @class = "form-control select2", @type = "text", @style = "width:70%;", @multiple = "multiple" })
                                    @Html.ValidationMessageFor(m => m.Keywords, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                }
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" type="submit" id="btnCreateProject" form="frmCreateProject">Save changes</button>
                <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
            </div>

        </div>
    </div>
</div>
<!-- modal end -->