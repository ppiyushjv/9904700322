@model MOSSWORKLOG.Areas.Project.Models.ProjectModel
@{
    Layout = null;
}

<!-- modal start -->
<div class="modal fade" id="modelProject" role="dialog" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>    
                @if (!Model.IsEdit)
                {
                    <h4 class="modal-title">Add Project</h4>
                }
                else
                {
                    <h4 class="modal-title">Edit Project</h4>
                }
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateProject", "Project", new { area = "Project" }, FormMethod.Post, new { @role = "form", @id = "frmCreateProject", @class = "form-horizontal" }))
                {

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(m => m.ProjectId)
                        @Html.HiddenFor(m => m.IsEdit)

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProjectName, htmlAttributes: new { @class = "col-md-3 control-label"   })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.ProjectName, "", new { @class = "form-control", @type = "text", @autofocus = "autofocus", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.ProjectName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ClientId, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.ClientId, Model.AllClient, new { @class = "form-control select2", @type = "text", @autofocus = "autofocus", @style = "width:80%;" })
                                    @*@Html.TextBoxFor(m => m.ClientId, "", new { @class = "form-control select2", @type = "text", @autofocus = "autofocus", @style = "width:80%;" })*@
                                    @Html.ValidationMessageFor(m => m.ClientId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Description, "", new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                }
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" type="submit"  id="btnCreateProject" form="frmCreateProject">Save changes</button>
                <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
            </div>

        </div>
    </div>
</div>
<!-- modal end -->