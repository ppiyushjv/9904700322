@model MOSSWORKLOG.Areas.User.Models.UserModel

@{
    Layout = null;
}

<!-- modal start -->
<div class="modal fade" id="modelUser" role="dialog" aria-hidden="true">
    <div class="modal-dialog model-sg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                @if (!Model.IsEdit)
                {
                    <h4 class="modal-title">Add User</h4>
                }
                else
                {
                    <h4 class="modal-title">Edit User</h4>
                }
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateUser", "User", new { area = "User" }, FormMethod.Post, new { @role = "form", @id = "frmCreateUser", @class = "form-horizontal" }))
                {

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(m => m.UserId)
                        @Html.HiddenFor(m => m.IsEdit)
                        @Html.Hidden("EditName",Model.UserName)

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @type = "text", @style = "width:80%;", @autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.FullName, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.FullName, "", new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Mobile, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Mobile, "", new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Password, "", new { @class = "form-control", @type = "password", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, "", new { @class = "form-control", @type = "password", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.RoleId, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.RoleId, Model.AllRole, new { @class = "form-control", @type = "text", @style = "width:70%;" })
                                    @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ManagerId, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.ManagerId, Model.AllManager, new { @class = "form-control", @type = "text", @style = "width:70%;" })
                                    @Html.ValidationMessageFor(m => m.ManagerId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.SupervisorId, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.SupervisorId, Model.AllSupervisor, new { @class = "form-control", @type = "text", @style = "width:70%;" })
                                    @Html.ValidationMessageFor(m => m.SupervisorId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                }

            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" type="submit" id="btnCreateClient" accesskey="s" form="frmCreateUser">Save changes</button>
                <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
            </div>

        </div>
    </div>
</div>
<!-- modal end -->