@model MOSSWORKLOG.Areas.Document.Models.CategoryModel
@{
    Layout = null;
}

<!-- modal start -->
<div class="modal fade" id="modelCategory" role="dialog" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>    
                @if (!Model.IsEdit)
                {
                    <h4 class="modal-title">Add Category</h4>
                }
                else
                {
                    <h4 class="modal-title">Edit Category</h4>
                }
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateCategory", "Compliance", new { area = "Compliance" }, FormMethod.Post, new { @role = "form", @id = "frmCreateProject", @class = "form-horizontal" }))
                {

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.IsEdit)

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "col-md-3 control-label"   })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control", @type = "text", @autofocus = "autofocus", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                }
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" type="submit"  id="btnCreateProject" form="frmCreateProject">Save changes</button>
                <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
            </div>

        </div>
    </div>
</div>
<!-- modal end -->