@model MOSSWORKLOG.Areas.Asset.Models.ContractModel
    

@{
    Layout = null;
}

<!-- modal start -->
<div class="modal fade" id="modelContract" role="dialog" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>    
                @if (!Model.IsEdit)
                {
                    <h4 class="modal-title">Add Contract</h4>
                }
                else
                {
                    <h4 class="modal-title">Edit Contract</h4>
                }
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreateContract", "Contract", new { area = "Asset" }, FormMethod.Post, new { @role = "form", @id = "frmCreateContract", @class = "form-horizontal js-validation-bootstrap" }))
                {

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(m => m.ContractId)
                        @Html.HiddenFor(m => m.IsEdit)

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.VendorId, htmlAttributes: new { @class = "col-md-3 control-label"   })
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.VendorId, Extension.GetVendor(), new { @class = "form-control select2", @type = "text", @style = "width:80%;", @autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(m => m.VendorId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Asset, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.Asset, "", new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.Asset, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.StartDate, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.StartDate, "", new { @class = "form-control default-date-picker", @type = "text", @style = "width:50%;" })
                                    @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.EndDate, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextBoxFor(m => m.EndDate, "", new { @class = "form-control default-date-picker", @type = "text", @style = "width:50%;" })
                                    @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextAreaFor(m => m.Description,7,10, new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Remarks, htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-9">
                                    @Html.TextAreaFor(m => m.Remarks, 3, 10, new { @class = "form-control", @type = "text", @style = "width:80%;" })
                                    @Html.ValidationMessageFor(m => m.Remarks, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                }
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
                <button class="btn btn-primary" type="submit"  id="btnCreateContract" form="frmCreateContract">Save changes</button>
            </div>

        </div>
    </div>
</div>